<div class="col-sm-12 jumbotron">
  <h1 class="text-center"><%= @movie.name %></h1>
  <br>
  <div class="row">
    <div class="col-sm-3 col-sm-offset-2">
      <%= image_tag @movie.image %>
    </div>
    <div class="col-sm-5">
      <h3 class="sinopsis-detalle"><%= @movie.sinopsis %></h3>
      <h3 class="duracion-detalle">Duraci&oacute;n: <strong><%= @movie.duration.localtime('-04:30').strftime("%I:%M") %></strong></h3>
    </div>    
  </div>
</div>
<div class="col-sm-4 col-sm-offset-4">
  <table class="table table-striped table-bordered text-center">
    <thead>
      <tr>
        <th class="text-center">Horarios</th>
      </tr>
    </thead>
    <tbody>
      <% @movie.shows.each do |m| %>
        <tr>
          <%
             if m.theater.type_theater=='N'
               available_seats = 100
             else
               available_seats = 200
             end
             m.seat_shows.each do |ss|
               if ss.status!='available'
                 available_seats-=1
               end

             end
          %>
            <td><%= m.time.localtime('-04:30').strftime("%I:%M" + " %p") %> Sala: <%= m.theater_id %> <br/>Asientos Disponibles: <%= available_seats.to_s %>
              <br/> <%= link_to 'Comprar', cartelera_seats_path(m) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

