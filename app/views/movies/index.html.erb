<div class="col-sm-8 col-sm-offset-2">
  <h1 class="text-center">Películas:</h1>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Sinopsis</th>
        <th>Duración</th>
        <th>Imágen</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |m| %>
        <tr>
          <td><%= m.name %></td>
          <td><%= m.sinopsis %></td>
          <td><%= m.duration %></td>
          <td><div class="thumb"><a href="/assets/<%= m.image %>"><%= image_tag m.image %></a></div></td>
          <td><%= link_to "Editar", edit_movie_path(m) %>&nbsp;|&nbsp;<%= link_to "Borrar", movie_path(m), method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
