<div class="col-sm-8 col-sm-offset-2">
  <div class="row">
    <h1 class="text-center">Películas:</h1>
    <div class="text-center">
      <%= link_to "Cargar Nueva Película", new_admin_movie_path, :class => 'btn btn-success' %>
    </div>
    <br>
    <table class="table table-striped table-bordered text-center">
      <thead>
        <tr>
          <th class="text-center">Nombre</th>
          <th class="text-center">Sinopsis</th>
          <th class="text-center">Duración</th>
          <th class="text-center">Imágen</th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |m| %>
          <tr>
            <td><%= m.name %></td>
            <td><%= m.sinopsis %></td>
            <td><%= m.duration.strftime("%I:%M") %></td>
            <td><div class="thumb"><a href="/assets/<%= m.image %>"><%= image_tag m.image %></a></div></td>
            <td><%= link_to "Editar", edit_admin_movie_path(m) %>&nbsp;|&nbsp;<%= link_to "Borrar", admin_movie_path(m), method: :delete, data: { confirm: 'Estás seguro?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
